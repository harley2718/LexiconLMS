@using LexiconLMS.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}


<div class="row" style="background-color:#D60000; padding-top:100px">
    <div class="col-md-offset-3 col-md-5">
        <section id="loginForm">
            <h1><font color="white">Välkommen till Lexicon LMS</font></h1>
            @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary(true, "")
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label", @style = "text-align:left"})
            <div class="col-md-offset-3 col-md-14">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "")
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-offset-3 col-md-14">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password, "")
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-14">
                <div class="checkbox">
                    @Html.CheckBoxFor(m => m.RememberMe)
                    @Html.LabelFor(m => m.RememberMe)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-14" style="padding-bottom:50px">
                <input type="submit" value="Logga in" class="btn btn-default" />
            </div>
        </div>
}
        </section>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}