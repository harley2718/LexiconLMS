        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.EndDate)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Radera" class="btn btn-default" />
        </div>
        <div>
            @Html.ActionLink("Tillbaka till kursens moduler", "Index", "Module", new { courseId = Model.CourseId, moduleId = Model.Id }, null)
        </div>
        <div>
            @Html.ActionLink("Tillbaka till kurslista", "Index", "Course", new { id = Model.CourseId }, null)
        </div>
    }
</div>
