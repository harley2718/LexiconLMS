@model IEnumerable<LexiconLMS.Models.Course>

@{
    ViewBag.Title = "Kurser";
}

<h2>Kurser</h2>

<p>
    @Html.ActionLink("Skapa kurs", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.ActionLink("Lägg till modul", "Create", "Module", new { courseId = item.Id }, null)  |
            @Html.ActionLink("Lägg till elev", "Create", "User", new { id = item.Id }, null)  |
            @Html.ActionLink("Detaljer", "Details", new { id = item.Id })  |
            @Html.ActionLink("Redigera", "Edit", new { id = item.Id })
        </td>
    </tr>
}

</table>
