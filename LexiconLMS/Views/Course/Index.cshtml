@model IEnumerable<LexiconLMS.Models.Course>

@{
    ViewBag.Title = "Kurser";
}

<h2>Kurser</h2>

<p>
    @Html.ActionLink("Skapa kurs", "Create")
</p>
<table class="table ">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
            <tr>
                <td class="align-bottom">
                    @if ((item.Id == ViewBag.courseId)||(item.Id == ViewBag.moduleId))
                        {<label class="text-danger">=>&nbsp;&nbsp;</label>}
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="align-bottom">
                    @Html.DisplayFor(modelItem => item.StartDate)
                </td>
                <td align="center">
                    @Html.ActionLink("Detaljer", "Details", new { id = item.Id })  |
                    @Html.ActionLink("Redigera", "Edit", new { id = item.Id })
                </td>
                <td align="right" width="200px">
                    @Html.ActionLink("Moduler", "Index", "Module", new { courseId = item.Id }, new { @class = "btn btn-default" })
                    @Html.ActionLink("Elever", "Index", "User", new { id = item.Id }, new { @class = "btn btn-default" })
                </td>
            </tr>
    }
    </table>
