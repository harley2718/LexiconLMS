@model IEnumerable<LexiconLMS.Models.Course>

@{
    ViewBag.Title = "Kurser";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Lägg till kurs", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.ActionLink("Lägg till modul", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Lägg till elev", "Edit", new { id = item.Id }) |
            @Html.ActionLink("Detalj", "Details", new { id = item.Id }) |
            @Html.ActionLink("Redigera", "Delete", new { id = item.Id })
        </td>
    </tr>
}

</table>
